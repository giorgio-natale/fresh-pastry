pipeline {
  environment {
    registry = "gionatale/fresh-pastry"
    registryCredential = 'docker-hub'
    dockerImage = ''
  }
  agent {
    kubernetes {
      yaml '''
        apiVersion: v1
        kind: Pod
        spec:
          serviceAccountName: jenkins
          containers:
          - name: maven
            image: maven:alpine
            command:
            - cat
            tty: true
          - name: kubectl-runner
            image: gionatale/kubectl-runner:1.0
          - name: build-container
            image: gradle:8.10.2-jdk-lts-and-current
            command:
            - cat
            tty: true
        '''
    }
  }
  stages {
        stage('Build') {
            when {changeset "OrderService/**"}
            steps {
                container('build-container') {
                    sh 'pwd'
                    sh 'ls'
                    sh '../gradlew :OrderService:bootJar'
                    sh 'ls build/libs'
                }
            }
        }
        stage('Test') {
            when {changeset "OrderService/**"}
            steps {
                container('build-container') {
                    echo 'Testing...'
                }
            }
        }
        stage('Deploy') {
            when {changeset "OrderService/**"}
            steps {
                container('kubectl-runner') {
                    echo 'Deploying...'
                }
            }
        }
    }
}